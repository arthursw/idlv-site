<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{pageUrl prev}}"><i class="fa fa-chevron-circle-left"></i> Précédent</a>
    {{/if}}
    <span class="page-number">Page {{page}} / {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{pageUrl next}}">Suivant <i class="fa fa-chevron-circle-right"></i></a>
    {{/if}}
</nav>